@using Luthetus.Common.RazorLib.Store.AccountCase
<div class="luth_ide_file-form-display"
     @onkeydown="HandleOnKeyDown">

    <div style="margin-bottom: 10px;">

        <div>
            Container Name: @AccountState.DEFAULT_CONTAINER_NAME
        </div>
    </div>

    <div style="margin-bottom: 10px;">

        <div>
            <label for="luth_ide_alias-key-input">
                Group Name:
            </label>

            <input id="luth_ide_alias-key-input"
                   class="luth_ide_input luth_ide_input-text"
                   style="height: 2em;"
                   type="text"
                   placeholder="Group Name"
                   autocapitalize="none"
                   autocorrect="off"
                   autocomplete="off"
                   spellcheck="false"
                   @bind="GroupKey"
                   @bind:event="oninput"/>
        </div>
        
        <div class="luth_ide_login-form-hint">
            ^ filter
        </div>
    </div>

    <div style="margin-bottom: 10px;">

        <div>
            <label for="luth_ide_alias-input">
                Alias:
            </label>

            <input id="luth_ide_alias-input"
                   class="luth_ide_input luth_ide_input-text"
                   style="height: 2em;"
                   type="text"
                   placeholder="Alias"
                   autocapitalize="none"
                   autocorrect="off"
                   autocomplete="off"
                   spellcheck="false"
                   @bind="Alias"
                   @bind:event="oninput"/>
        </div>

        <div class="luth_ide_login-form-hint">
            ^ your display name
        </div>
    </div>
</div>