@using Fluxor.Blazor.Web.Components;
@using Luthetus.Ide.ClassLib.Context;

@inherits FluxorComponent

<ContextBoundary ContextRecord="ContextFacts.EditorContext"
                 ClassCssString="luth_ide_active-contexts"
                 StyleCssString="height: 100%">

    @{
        var contextStates = ContextStatesWrap.Value;
    }

    <div class="luth_ide_section-title">
        ActiveContextsDisplay
    </div>

    <div class="luth_ide_section-body">
        @foreach (var contextRecord in contextStates.ActiveContextRecords)
        {
            <div>@contextRecord.DisplayNameFriendly</div>
        }
    </div>
</ContextBoundary>
