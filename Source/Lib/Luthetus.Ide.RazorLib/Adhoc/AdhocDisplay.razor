<div class="luth_ide_terminal-display"
     style="height: 100%; width: 100%;">

     <div class="luth_ide_section-title">
         Adhoc Display
     </div>
 
     <div class="luth_ide_section-body"
          style="width: 100%;">
         
         <div>
             <button class="luth_button"
                     @onclick="EnqueueTaskOnClick">
                 Enqueue Task
             </button>
         </div>
         
         <hr/>
         
         @@BackgroundTaskMonitor.ExecutingBackgroundTask:
         
         &nbsp;
         
         @if (CommonBackgroundTaskMonitor.ExecutingBackgroundTask is null)
         {
             @: null
         }
         else
         {
             @CommonBackgroundTaskMonitor.ExecutingBackgroundTask.Name
         }
     </div>
</div>



