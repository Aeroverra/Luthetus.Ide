<div class="luth_te_search-engine-file-system">

	<input class="luth_ide_input luth_ide_input-text"
		   style="width: 100%;"
		   @bind="SearchEngineFileSystem.StartingDirectoryPath"
		   @bind:event="oninput"/>

	@if (SearchEngineFileSystem.IsSearching)
    {
        <IconLoading/>
    }
    else
    {
        <div>
            Not Searching
        </div>
    }

	<div class="luth_te_search-engine-file-system-results">

		@{ var localFilePathBag = SearchEngineFileSystem.FilePathBag.ToArray(); }

		@foreach (var filePath in localFilePathBag)
		{
			<div>@filePath</div>
		}
	</div>
</div>
