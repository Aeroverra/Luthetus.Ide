@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@{ var notificationState = NotificationStateWrap.Value; }

@for (int i = 0; i < notificationState.DefaultBag.Count; i++)
{
    var index = i;
    var notification = notificationState.DefaultBag[index];
    
    <NotificationDisplay @key="notification.Key" 
                         NotificationRecord="notification"
                         Index="index"/>
}
